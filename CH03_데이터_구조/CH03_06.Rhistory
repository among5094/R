# CH03.06 데이터 프레임
df<-data.frame(성명=c("장발장", "자베르"), 성별=c("남", "남"), 나이=c(40, 45), 국어=c(70, 80))
df
str(df)
# str(): 데이터 구조 확인
# 데이터프레임에 열과 행 추가
df<-cbind(df, 음악=c(80,75))
df
df<-rbind(df, data.frame(성명="팡틴", 성별="여", 나이=30, 국어=75, 음악=90))
df
# R의 요소값 보기
df[3,2]
df[3,] #3행의 모든 값 출력
df[,2] #2열의 모든 값
df[-2,] #2행을 제외한 모든 값
df[,-3] #3열을 제외한 모든 값
df[3,5]<-95 #3행 5열 값의 수정
df
